<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.android.main.presentation.FragmentTopView
        android:id="@+id/fragmentTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/staffDetailPoster"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:layout_marginStart="@dimen/horizontal_margin"
        app:shapeAppearanceOverlay="@style/ShapeCorner"
        app:layout_constraintTop_toBottomOf="@+id/fragmentTop"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/staffDetailName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        app:layout_constraintStart_toEndOf="@+id/staffDetailPoster"
        app:layout_constraintTop_toBottomOf="@id/fragmentTop"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Title"
        android:textSize="@dimen/regular_font_size"
        tools:text="@tools:sample/full_names"
        />
    <TextView
        android:id="@+id/staffDetailRole"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/staffDetailName"
        app:layout_constraintTop_toBottomOf="@id/staffDetailName"
        app:layout_constraintEnd_toEndOf="@id/staffDetailName"
        style="@style/CardSubTitle"
        tools:text="@tools:sample/lorem"
        />

    <TextView
        android:id="@+id/staffDetailFilmographyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/staffDetailPoster"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/block_vertical_margin"
        android:text="@string/filmography_title"
        style="@style/ListTitle"
        />
    <Button
        android:id="@+id/staffDetailFilmographyButtonMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filmography_more"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:textAllCaps="false"
        android:drawableEnd="@drawable/ic_arrow_right_small"
        app:layout_constraintTop_toTopOf="@id/staffDetailFilmographyTitle"
        app:layout_constraintBottom_toBottomOf="@id/staffDetailFilmographyTitle"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/LinkButton"
        />
    <TextView
        android:id="@+id/staffDetailFilmographyCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/staffDetailFilmographyTitle"
        app:layout_constraintTop_toBottomOf="@id/staffDetailFilmographyTitle"
        />

</androidx.constraintlayout.widget.ConstraintLayout>