<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CardTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
    </style>
    <style name="CardSubTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>
    <style name="Image" parent="TextAppearance.AppCompat">
        <item name="borderRound">16dp</item>
    </style>
    <style name="Label" parent="TextAppearance.AppCompat">>
        <item name="android:textSize">@dimen/extra_small_font_size</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="WhiteLabel" parent="Label">
        <item name="android:textColor">@color/text_black</item>
    </style>
    <style name="BlueLabel" parent="Label">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:fontFamily">@font/graphik</item>
    </style>
    <style name="ListTitle" parent="Title">
        <item name="android:textSize">@dimen/large_font_size</item>
    </style>
    <style name="LinkButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="SearchEditText" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>
    <style name="MovieDetailButton" parent="LinkButton">
        <item name="android:minHeight">34dp</item>
        <item name="android:minWidth">34dp</item>
    </style>
    <style name="ShapeCorner" parent="">
        <item name="cornerSize">4dp</item>
    </style>
    <style name="Container">
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
    </style>
    <style name="RoundedRadioButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/rounded_radio_button</item>
        <item name="android:textColor">@drawable/rounded_radio_button_text</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
    <style name="FilterRadioButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@drawable/rounded_radio_button_text</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="FilterCategoryRadioButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:button">@android:color/transparent</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
        <item name="android:background">@drawable/filter_category_radio_button</item>
        <item name="android:textSize">@dimen/regular_font_size</item>
    </style>
    <style name="FilterRadioButtonLeft" parent="FilterRadioButton">
        <item name="android:background">@drawable/filter_radio_button_left</item>
    </style>
    <style name="FilterRadioButtonRight" parent="FilterRadioButton">
        <item name="android:background">@drawable/filter_radio_button_right</item>
    </style>
    <style name="FilterRadioButtonCenter" parent="FilterRadioButton">
        <item name="android:background">@drawable/filter_radio_button</item>
    </style>
</resources>